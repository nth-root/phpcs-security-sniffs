{
    "name": "nth-root/phpcs-security-sniffs",
    "type": "phpcodesniffer-standard",
    "require": {
        "php": "^8.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "NthRoot\\PhpSecuritySniffs\\Security\\": "Security/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NthRoot\\PhpSecuritySniffs\\Security\\Tests\\": "Security/Tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
